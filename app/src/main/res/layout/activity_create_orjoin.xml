<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".createORjoin">

    <Button
        android:id="@+id/createtrip"
        android:layout_width="193dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/gradient1"
        android:elevation="20dp"
        android:drawableLeft="@drawable/create_trip_icon"
        android:ellipsize="none"
        android:fontFamily="@font/roboto_condensed_bold"
        android:padding="5dp"
        android:radius="10dp"
        android:text="Create Trip"
        android:textColor="#222222"
        android:textSize="24sp" />

    <Button
        android:id="@+id/join"
        android:layout_width="193dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:background="@drawable/gradient1"
        android:elevation="20dp"
        android:drawableLeft="@drawable/join_trip_icon"
        android:ellipsize="none"
        android:fontFamily="@font/roboto_condensed_bold"
        android:padding="5dp"
        android:radius="10dp"
        android:text="Join Trip"
        android:textColor="#222222"
        android:textSize="24sp" />

    <Button
        android:id="@+id/logout1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="580dp"
        android:background="#00000000"
        android:fontFamily="@font/roboto"
        android:text="Log out."
        android:textColor="#CCFFFFFF" />


    <ListView
        android:id="@+id/triplist"
        android:layout_width="358dp"
        android:layout_height="330dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/createtrip"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="20dp"
        android:alpha="0.9"
        android:background="@drawable/roundbox"
        android:divider="@android:drawable/divider_horizontal_bright"
        android:elevation="20dp"
        android:ellipsize="end"
        android:textColor="#FFFFFF"
        android:visibility="visible" />


</RelativeLayout>