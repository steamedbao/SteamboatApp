<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    tools:context=".SummaryPage">
    <TextView
        android:id="@+id/trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="60dp"
        android:text="Trip"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/summary"
        android:layout_width="400dp"
        android:layout_height="58dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/montserrat"
        android:text="Summary"
        android:textColor="#FFAB91"
        android:textSize="34sp" />


    <ImageButton
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/roundbutton2"
        android:elevation="30dp"
        android:src="@drawable/summary"
        android:textSize="22sp"></ImageButton>

    <TextView
        android:id="@+id/button2"
        android:layout_width="235dp"
        android:layout_height="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="160dp"
        android:layout_toRightOf="@id/button1"
        android:gravity="center_vertical"
        android:alpha="0.8"
        android:fontFamily="@font/roboto"
        android:background="@drawable/roundbutton"
        android:padding="13dp"
        android:text="See the overall statistics of your trip."
        android:textColor="#CCFFFFFF"
        android:textSize="20sp"></TextView>

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/roundbutton2"
        android:elevation="30dp"
        android:src="@drawable/businesswoman"
        android:theme="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"></ImageButton>

    <TextView
        android:id="@+id/button4"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="300dp"
        android:layout_toRightOf="@+id/button3"
        android:alpha="0.8"
        android:gravity="center_vertical"
        android:fontFamily="@font/roboto"
        android:background="@drawable/roundbutton"
        android:text="See individual expenses."
        android:textColor="#CCFFFFFF"
        android:padding="13dp"
        android:textSize="20sp"></TextView>

    <Button
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />


</RelativeLayout>